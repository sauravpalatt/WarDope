<section class="content-main">
  <div class="row">
      <div class="col-9">
          <div class="content-header">
              <h2 class="content-title">Update Product</h2>
             
          </div>
      </div>

      <div class="col-lg-6">
          <div class="card mb-4">
              <div class="card-header">
                  <h4>Basic</h4>
              </div>
              <div class="card-body">
                  <form id="productUpdateForm" enctype="multipart/form-data" 
