                                <td><%= variant.size %></td>
                                <td><%= variant.stock %></td>
                                <!-- <td><button type="button" class="btn btn-danger btn-sm delete-variant" data-index="<%= index %>">Delete</button></td> -->
                                <td><button type="button" class="btn btn-danger btn-sm delete-variant" onclick="deleteSize('<%=variant._id %>')">Delete</button></td>
