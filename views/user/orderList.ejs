<%- include ("../partials/user/header") %>

<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <!-- Order List Table -->
        <div class="col-lg-12 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th>View Details</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    <% if (orders && orders.length > 0) { %>
                        <% orders.forEach((order) => { %>
                            <% order.cartItems.forEach((item) => { %>
                                <tr>
                                    <td class="align-middle"><%= order.orderId %></td>
                                    <td class="align-middle"><%= item.productName %></td>
                                    <td class="align-middle"><%= item.quantity %></td>
                                    <td class="align-middle">
                                        <span class="badge rounded-pill 
                                            <% if (order.status === 'pending') { %> bg-warning text-dark <% } %>
                                            <% if (order.status === 'shipped') { %> bg-info text-white <% } %>
                                            <% if (order.status === 'delivered') { %> bg-success text-white <% } %>
                                            <% if (order.status === 'canceled') { %> bg-danger text-white <% } %>">
                                            <%= order.status %>
                                        </span>
                                    </td>
                                    <td class="align-middle">
                                        <a href="/order-details/<%= order.orderId %>" class="btn btn-info btn-sm">View Details</a>
                                    </td>
                                </tr>
                            <% }); %>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="8" class="text-center">No orders found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include ("../partials/user/footer") %>