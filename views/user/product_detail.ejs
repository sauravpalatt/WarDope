            xLarge: <%= product.sizes.xLarge %>
        };
        console.log(stockData)
        // Event listener for radio buttons
        document.querySelectorAll('input[name="size"]').forEach(radio => {
            radio.addEventListener('change', (event) => {
                const selectedSize = event.target.value;
                const stockQty = stockData[selectedSize];
    
                const stockInfo = document.getElementById('stock-info');
                if (stockQty > 0) {
                    stockInfo.innerHTML = `<p style="color: green;">In Stock: ${stockQty}</p>`;
                } else {
                    stockInfo.innerHTML = `<p style="color: red;">Out of Stock</p>`;
                }
            });
        });

        document.addEventListener("DOMContentLoaded",()=>{
            const stockInput = document.getElementById("stock-input")
            const stockSize = document.getElementsByName("size")
            const submitButton = document.getElementById("submit-data")

            document.getElementById("increase-stock").addEventListener("click",()=>{
                if(stockInput.value < 1){
                    stockInput.value = 1
                }
                 stockInput.value = Number(stockInput.value) + 1
            })

            document.getElementById("decrease-stock").addEventListener("click",()=>{
                if(stockInput.value > 1){
                    stockInput.value = Number(stockInput.value) - 1
                }   
            })


        })

        
    </script>


